<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="CreateOnMyClassDialog" title="Cancel My Class" draggable="true" resizable="true">
        <VBox class="sapUiSmallMargin">

            <!-- Employee ID -->
            <Label text="Employee ID:"/>
            <Text text="{myClassModel>/EMPLOYEE_ID}" class="sapUiSmallMarginBottom"/>

            <!-- Employee Name -->
            <Label text="Employee Name:"/>
            <Text text="{myClassModel>/EMPLOYEE_NAME}" class="sapUiSmallMarginBottom"/>

            <!-- Class Selection with Value Help -->
            <Label text="Select Class:" class="sapUiSmallMarginTop" required="true"/>
            <Input
                id="myClassInput"
                width="100%"
                placeholder="Click search icon to select class..."
                showValueHelp="true"
                valueHelpRequest="onMyClassValueHelp"
                valueHelpOnly="false"
                value="{myClassModel>/selectedClassDisplay}"
                required="true"
                editable="true"/>
        </VBox>

        <beginButton>
            <Button text="Proceed" type="Emphasized" press="onConfirmOnMyClass"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelMyClassDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
