<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="classValueHelpDialog"
		title="Select Class"
		noDataText="No classes found"
		search="onClassSearch"
		confirm="onClassConfirm"
		cancel="onClassCancel"
		items="{classModel>/ClassList}">
		<StandardListItem
			title="{classModel>CLASS_TITLE}"
			description="{= 'Class ID: ' + ${classModel>CLASS_ID} + ' | Start: ' + ${classModel>FORMATTED_CLASS_START_DATE}}"
			type="Active"/>
	</SelectDialog>
</core:FragmentDefinition>
