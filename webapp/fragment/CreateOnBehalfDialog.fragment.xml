<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="CreateOnBehalfDialog" title="Cancel Class On Behalf" draggable="true" resizable="true">
		<VBox class="sapUiSmallMargin">
			<Label text="Select Subordinate:" required="true"/>
			<Input
				id="subordinateInput"
				width="100%"
				placeholder="Search subordinate by ID or name..."
				showValueHelp="true"
				valueHelpRequest="onSubordinateValueHelp"
				value="{selectedSubordinate>/displayText}"
				required="true"
				editable="false"/>
			<Label text="Select Class:" class="sapUiSmallMarginTop" required="true"/>
			<Select id="classSelect" width="100%" items="{classModel>/ClassList}">
				<core:Item key="{classModel>CLASS_ID}" text="{classModel>CLASS_TITLE}"/>
			</Select>
		</VBox>
		<beginButton>
			<Button text="Proceed" type="Emphasized" press="onConfirmCancelOnBehalf"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelOnBehalf"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>